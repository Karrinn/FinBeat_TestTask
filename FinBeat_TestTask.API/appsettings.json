{
  "ConnectionStrings": {
    "SqliteConnectionString": "DataSource=localDB.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Error",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.SQLite" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "SQLite",
        "Args": {
          "sqliteDbPath": "Logs/LogslocalDB.db",
          "tableName": "Logs",
          "Filter": [
            {
              "Name": "ByIncludingOnly",
              "Args": {
                "expression": "@m Contains('REQUEST') or @m Contains('RESPONSE')"
              }
            }
          ]
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
