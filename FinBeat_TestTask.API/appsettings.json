{
  "ConnectionStrings": {
    "SqliteConnectionString": "DataSource=localDB.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.SQLite" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "Logs/log.txt" }
      },
      {
        "Name": "SQLite",
        "Args": {
          "sqliteDbPath": "Logs/LogslocalDB.db",
          "tableName": "Logs"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
